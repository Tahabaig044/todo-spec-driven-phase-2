{
  "name": "todo-spec-driven",
  "version": "1.0.0",
  "description": "A spec-driven todo application for Panaversity Hackathon II",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "spec": "jasmine",
    "spec:watch": "nodemon --exec \"npm run spec\""
  },
  "keywords": [
    "spec-driven",
    "todo",
    "panaversity",
    "hackathon"
  ],
  "author": "Panaversity Hackathon Participant",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.19.130",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.9.2"
  }
}
